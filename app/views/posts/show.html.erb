<!DOCTYPE html>
<html>

<head>

<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="viewport"  content="initial-scale=1, width=device-width">

<title>Article: <%= @post.title %></title>


<!--[if  IE]>
<link rel="stylesheet" type="text/css" href="css/ie.css" />
<![endif]-->

<!--[if lt IE 9]>
<script src="js/html5shiv.js"></script>
<![endif]-->

</head>

<body class="home">
    
    <!-- start div #wrapper -->
    <div id="wrapper">
        
       <!-- start header -->
        <%= render 'posts/header' %>
        <!-- end header -->
        
        <!-- start div #main-title -->
        <div class="main-title">
            <p><%= @post.category.name %></p>
        </div>
        <!-- end div #main-title -->
        
		<!-- start div #main -->
	    <div id="main">
            <div class="main-content">
            	<div class="left-container">
                	<article>
                    	<div class="title-box">
                            <h1><%= @post.title %></h1>
                        </div>
                        <div class="post-thumb">
                            <% if @post.image.present? %>
                                        <%= image_tag @post.image.big_thumb.url %>
                                    <% else %>
                        	<img src="http://dummyimage.com/714x356/413d3c/fff.png" alt="">
                            <% end %>
                        </div>
                        <div class="post-info">
                            <ul>
                                <li>category<br><span><%= @post.category.name %></span></li>
                                <li>author<br><span><%= "#{@post.user.first_name.capitalize} #{@post.user.last_name.capitalize}." %> </span></li>
                                <li><%= @post.created_at.strftime("%d") %><br><span><%= @post.created_at.strftime("%B") %></span></li>
                            </ul>
                            <div class="clear"></div>    
                        </div>
                        <div class="post-content">
                          
                            <%= @post.body.html_safe %>

                            <div class="marked-title first">
                                <h3>you may also want to read</h3>
                            </div>
                            <div class="row-fluid">
                                <% @also.each do |post| %>
                                    <div class="span4">
                                        <article class="small single">
                                            <div class="post-thumb">
                                                <% if post.image.present? %>
                                                    <%= image_tag post.image.thumb.url %>
                                                <% else %>
                                                    <a href="blog-single.html"><img src="http://dummyimage.com/162x88/413d3c/fff.png" alt=""></a>
                                                <% end %>
                                                <div class="overlay">
                                                    <div class="op"></div>
                                                    <div class="cat">
                                                        <div class="icon"></div>
                                                        <%= post.category.name %>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="cat-post-desc">
                                                <p class="date"><%= post.created_at.strftime("%B %d, %Y") %></p>
                                                <h3><a href="blog-single.html"><%= post.title %></a></h3>
                                            </div>
                                        </article>    
                                    </div>
                                    <% end %>
                                </div>
                                
                            <div class="comments">
                            	<div class="marked-title">

                                </div>	
                                <div class="fb-comments" data-href="<%= request.protocol + request.host_with_port + request.path %>" data-width="470" data-num-posts="10"></div>
                            </div>
                            <div class="contact-content">
                                <div class="marked-title">
                                </div>
                            </div>
                        </div>
                    </article>
                    <div class="clear"></div>
                </div>
                <div class="right-container">
                    <div class="sidebar">
                        
                        <%= render 'posts/social' %>

                        <div class="widget">
                            <div class="marked-title">
                                <h3>ads</h3>
                            </div>
                            <img class="ads" <a href="#"><%= image_tag("ads.jpg") %></a>
                            <div class="clear"></div>
                        </div>
                        
                       
                        <div class="widget">
                            <ul class="nav nav-tabs" id="myTab">
                                <li class="active"><a href="#tab-1" data-toggle="tab">latest</a></li>
                                <li><a href="#tab-2" data-toggle="tab">popular</a></li>
                                <li><a href="#tab-3" data-toggle="tab">controversial</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab-1">
                                    <div class="news">
                        
                                        <% @latest.each do |post| %>
                                        <div class="item">
                                            <h3><a href=""><%= link_to "#{post.title}", post %></a></h3>
                                            <p><%= post.created_at.strftime("%B %d, %Y") %></p>
                                            <div class="clear"></div>
                                        </div>
                                        <% end %>
                                        
                                    </div>
                                </div>
                                <div class="tab-pane" id="tab-2">
                                    <div class="news">
                                        <% @popular2.each do |post| %>
                                        <div class="item">
                                            <h3><a href=""><%= link_to "#{post.title}", post %></a></h3>
                                            <p><%= post.created_at.strftime("%B %d, %Y") %></p>
                                            <div class="clear"></div>
                                        </div>
                                       <% end %>
                                    </div>
                                </div>
                                <div class="tab-pane" id="tab-3">
                                    <div class="news">
                                        <% @popular2.shuffle.each do |post| %>
                                        <div class="item">
                                            <h3><a href=""><%= link_to "#{post.title}", post %></a></h3>
                                            <p><%= post.created_at.strftime("%B %d, %Y") %></p>
                                            <div class="clear"></div>
                                        </div>
                                             <% end %>
                                    </div>
                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>

                            <div class="clear"></div>
                        </div>
                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>	
        </div>
	    <!-- end div #main -->
    
    </div>
	<!-- end div #wrapper -->    
    
  <!-- start footer -->
        <%= render 'posts/footer' %>
    <!-- end footer -->

<%= render 'posts/dropdown' %>

<script type="text/javascript" src="assets/jquery-1.8.3.min.js" ></script>
<script type="text/javascript" src="assets/html5shiv.js" ></script>
<script type="text/javascript" src="assets/bootstrap.min.js" ></script>

<script type="text/javascript" src="assets/jquery.easing-1.3.js" ></script>
<script type="text/javascript" src="assets/functions.js" ></script>
<script type="text/javascript">

</body>

</html>